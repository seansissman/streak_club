{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "streak-club",
  "permissions": {
    "redis": true,
    "reddit": {
      "enable": true,
      "scope": "user",
      "asUser": []
    }
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "app.html",
        "height": "tall"
      },
      "app": {
        "entry": "app.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "streak-club",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "settings": {
    "global": {
      "dev_usernames": {
        "type": "string",
        "label": "DEV allowlist usernames (comma-separated, without u/)",
        "helpText": "Comma-separated usernames, without u/, allowed to use developer-only tools.",
        "defaultValue": "SacPistachian"
      }
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "dev": {
    "subreddit": "streak_club_dev"
  }
}
